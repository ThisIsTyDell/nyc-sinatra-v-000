<h1>Create a new Figure</h1>
<form method="POST" action="/figures">
  <label>Name</label>
  <input type="text" id="figure_name" name="figure[name]"></br>

  <h2><label>Title</label></h2>
  <% Title.all.each do |title| %>
    <label><%= title.name %></label>
    <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>"></br>
  <% end %>


  <h2><label>Landmark</label></h2>
  <% Landmark.all.each do |landmark| %>
    <label><%= landmark.name %></label>
    <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>"></br>
  <% end %>

  <h2>Create new Title</h2>

  <label>Name</label>
  <input type="text" id="new_title" name="title[name]"></br>

  <h2>Create new Landmark</h2>

  <label>Name</label>
  <input type="text" id="new_landmark" name="landmark[name]">
  <label>Year</label>
  <input type="text" id="landmark_year_completed" name="landmark[year_completed]">


  <input type="submit" value="Create New Figure">
</form>